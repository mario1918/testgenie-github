# Server
HOST=0.0.0.0
PORT=4000
FRONTEND_ORIGIN=http://localhost:5173

# Optional API key for /chat/completions
# If set, requests must include: Authorization: Bearer <API_KEY>
# API_KEY=sk-your-token

# Force real Bedrock output (no mock/static fallback)
REQUIRE_BEDROCK=true

# AWS Bedrock (must also have AWS credentials configured on this machine)
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_TEMPERATURE=0.5
BEDROCK_MAX_TOKENS=1800
AI_PROVIDER=proxy
AI_PROXY_URL=http://localhost:4000/chat/completions

# If your proxy requires Authorization: Bearer <token>, set it here
AI_PROXY_API_KEY=sk-your-proxy-token

# Jira Cloud
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=you@company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=ABC
# JIRA_PARENT_ISSUE_KEY=
JIRA_LINK_TYPE=Relates
