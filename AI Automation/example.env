# ========================================
# Playwright Configuration
# ========================================

# Run tests in headless mode (true/false)
# false = show browser UI during testing
PLAYWRIGHT_HEADLESS=false

# Slow down test execution in milliseconds
# Useful for debugging (1000 = 1 second delay)
PLAYWRIGHT_SLOW_MO=1000

# ========================================
# Server Configuration
# ========================================

# Port where the server runs
PORT=3000

# Node environment
NODE_ENV=development
